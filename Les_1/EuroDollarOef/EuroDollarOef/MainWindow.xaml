<Window x:Class="EuroDollarOef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EuroDollarOef"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="LabelEur" Content="Bedrag in Euro:" HorizontalAlignment="Left" Margin="227,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="LabelDollar" Content="Bedrag in Dollar: " HorizontalAlignment="Left" Height="28" Margin="227,250,0,0" VerticalAlignment="Top" Width="111"/>
        <TextBox x:Name="TxtDollar" HorizontalAlignment="Left" Height="30" Margin="338,250,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="92"/>
        <TextBox x:Name="TxtEuro" HorizontalAlignment="Left" Height="30" Margin="338,204,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="92"/>
        <Button x:Name="BtnBereken" Content="Bereken" HorizontalAlignment="Left" Margin="480,219,0,0" VerticalAlignment="Top" Click="BtnBereken_Click"/>
        <Button x:Name="BtnWis" Content="Wissen" HorizontalAlignment="Left" Margin="480,265,0,0" VerticalAlignment="Top" Click="BtnWis_Click"/>

    </Grid>
</Window>
